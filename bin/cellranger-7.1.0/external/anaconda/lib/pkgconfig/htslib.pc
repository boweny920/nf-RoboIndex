includedir=external/anaconda/include
libdir=external/anaconda/lib

# Flags and libraries needed when linking against a static libhts.a
# (used by manual and semi-manual pkg-config(1)-style enquiries).
static_ldflags=-Wl,-O2 -Wl,--sort-common -Wl,--as-needed -Wl,-z,relro -Wl,-z,now -Wl,--disable-new-dtags -Wl,--gc-sections -Wl,-rpath,external/anaconda/lib -Wl,-rpath-link,external/anaconda/lib -Lexternal/anaconda/lib -rdynamic
static_libs=-lpthread -lz -lm -ldl -lbz2 -llzma -ldeflate

Name: htslib
Description: C library for high-throughput sequencing data formats
Version: 1.12
Cflags: -I${includedir}
Libs: -L${libdir} -lhts
Libs.private: -L${libdir} -Wl,-O2 -Wl,--sort-common -Wl,--as-needed -Wl,-z,relro -Wl,-z,now -Wl,--disable-new-dtags -Wl,--gc-sections -Wl,-rpath,external/anaconda/lib -Wl,-rpath-link,external/anaconda/lib -Lexternal/anaconda/lib -lbz2 -ldeflate -lhts -lm -lpthread
Requires.private: zlib  liblzma
